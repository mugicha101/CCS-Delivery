{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid || root.child('users').child(auth.uid).child('role').val() == 'admin' || root.child('users').child(auth.uid).child('role').val() == 'accountant' || root.child('users').child(auth.uid).child('role').val() == 'service'",
        ".write": false,
          "role": {
        	".validate": true
        },
        "balance": {
          "amount": {
            ".validate": true
          },
          "records": {
            "$time": {
              "amount": {
                ".validate": true
              },
              "description": {
                ".validate": true
              },
              "accountant_id": {
                ".validate": true
              },
              "$other": {
                ".validate": false
              }
            }
          },
          "$other": {
            ".validate": false
          }
        },
        "email": {
          ".validate": true
        },
        "name": {
          ".validate": true
        },
        "cart": {
          ".validate": true
        },
        "orders": {
          ".validate": true
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "pacc": {
      "$uid": {
        ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'accountant'",
        ".write": false,
        "balance": {
          "amount": {
            ".validate": true
          },
          "records": {
            "$time": {
              "amount": {
                ".validate": true
              },
              "description": {
                ".validate": true
              },
              "accountant_id": {
                ".validate": true
              },
              "$other": {
                ".validate": false
              }
            }
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },
    "store": {
      ".read": "auth != null",
      "$id": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'service'",
        "name": {
          ".validate": true
        },
        "amount": {
          ".validate": true
        },
        "cost": {
          ".validate": true
        },
        "vendor": {
          ".validate": true
        },
        "unit": {
          ".validate": true
        },
        "retrieval_method": {
          ".validate": true
        },
        "description": {
          ".validate": true
        },
        "$other": {
          ".validate": false
        }
      }
    }
  }
}